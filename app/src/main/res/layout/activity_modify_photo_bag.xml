<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="me.sheepyang.tuiserver.activity.adv.ModifyAdvActivity">

    <me.sheepyang.tuiserver.widget.QBar
        android:id="@+id/QBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qb_is_back="true"
        app:qb_right_text="添加"
        app:qb_right_text_size="12sp"
        app:qb_title="添加套图"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout_model"
                layout="@layout/adapter_item_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="标题"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_model"/>

            <EditText
                android:id="@+id/edt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:hint="请输入标题"
                android:maxLength="200"
                android:maxLines="3"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_title"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="描述"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_title"/>

            <EditText
                android:id="@+id/edt_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:hint="请输入描述"
                android:maxLength="200"
                android:maxLines="3"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_desc"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/tv_desc"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="标签"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_desc"/>

            <EditText
                android:id="@+id/edt_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:hint="请输入标签"
                android:maxLength="200"
                android:maxLines="3"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_label"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/tv_label"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_see_base_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="浏览基数"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_label"/>

            <EditText
                android:id="@+id/edt_see_base_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:digits="0123456789"
                android:hint="请输入浏览基数"
                android:inputType="number"
                android:maxLength="200"
                android:maxLines="3"
                android:singleLine="true"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_see_base_num"
                app:layout_constraintLeft_toRightOf="@+id/tv_see_base_num"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_collect_base_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="收藏基数"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_see_base_num"/>

            <EditText
                android:id="@+id/edt_collect_base_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:digits="0123456789"
                android:hint="请输入收藏基数"
                android:inputType="number"
                android:maxLength="200"
                android:maxLines="3"
                android:singleLine="true"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_collect_base_num"
                app:layout_constraintLeft_toRightOf="@+id/tv_collect_base_num"
                app:layout_constraintRight_toRightOf="parent"/>

            <CheckBox
                android:id="@+id/cb_is_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="是否VIP专属"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_collect_base_num"/>

            <CheckBox
                android:id="@+id/cb_is_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="是否模糊"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_is_vip"/>

            <CheckBox
                android:id="@+id/cb_is_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="立即显示"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_is_blur"/>

            <Button
                android:id="@+id/btn_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="选择封面"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_is_show"/>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_select_image"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>